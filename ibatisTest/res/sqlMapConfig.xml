<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMapConfig
	PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
	

	
<sqlMapConfig>
	<!-- 
		DB와 연결하는 정보를 properties파일에 저장해 놓고,
		이 properties파일의 내용을 읽어올 수 있도록 설정
	 -->
	 <properties resource="dbinfo.properties"/>
	 
	 <!-- 
	 	각각의 sqlMap 파일의 네임스페이스와 id속성값을 연결해서 실행할 쿼리문을 선택하도록 설정
	  -->
	<settings useStatementNamespaces="true"/>
	
	<!-- 
		쿼리문에 사용할 VO객체는 패키지 이름을 포함한 전체 이름을 사용해야 하는데
		그렇데 되면 문장이 너무 길어질 수 있기 때문에 긴 전체 이름을 대신할 alias를 설정할 수 있음
		
		형식) <typeAlias alias="alias명" type="클래스의 풀네임"/>
	 -->
	 <typeAlias alias="lprodVo" type="kr.or.ddit.basic.LprodVO"/>
	
	<!-- DB와의 연결을 처리하는 부분 -->
	<transactionManager type="JDBC">
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver" value="${driver}"/>
			<property name="JDBC.ConnectionURL" value="${url}"/>
			<property name="JDBC.Username" value="${user}"/>
			<property name="JDBC.Password" value="${pass}"/>
		</dataSource>
	</transactionManager>
	
	<!-- 실행할 SQL문 등록 -->
	<!-- 
		실행할 SQL문은 xml문서로 따로 만든 후 그 xml문서를 아래와 같이 등록
		형식) <sqlMap resource = "경로명/파일명.xml"/>
	 -->
	<sqlMap resource="kr/or/ddit/basic/lprodTest.xml"/>
	<sqlMap resource="kr/or/ddit/mvc/ibatis/memberTest.xml"/>
	<!-- <sqlMap resource="kr/or/ddit/basic/lprod.xml"/> -->
	
</sqlMapConfig>


























